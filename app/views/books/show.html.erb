<div class="container">
  <div class="row">
    <div class="col-3">
      <%= render "users/info", user:@user %>
      <%= render "users/edit", user:@user %>
      <%= render "create", book:@booknew %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user) do %>
              <%= image_tag @user.get_profile_image(1000,1000) %><br>
              <%= @user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book) do %>
              <%= @book.title %></td>
              <% end %>
            <td><%= @book.body %></td>
            <td id="favorite_btn_<%= @book.id %>">
            <%= render "favorites/form", book:@book %>
            </td>
            <td>
              <% if @user == current_user %>
                <%= link_to edit_book_path(@book), class: "btn btn-sm btn-success" do %>
                Edit
                <% end %>
              <% end %>
            </td>
            <td>
              <% if @user == current_user %>
                <%= link_to book_path(@book), method: :delete, class: "btn btn-sm btn-danger" do %>
                Destroy
                <% end %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
      <% if @comments != 0 %>
      <div id="comments_area">
      <%= render "comments/index", comments:@comments %>
      </div>
      <% end %>
      <div class="new_comment">
      <%= render "comments/form", comment:@comment, book:@book %>
      </div>
    </div>
  </div>
</div>

