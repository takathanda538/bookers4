<div class="container">
  <div class="row">
    <div class="col-3">
      <%= render "users/info", user:@user %>
      <%= render "users/edit", user:@user %>
      <%= render "create", book:@book %>
    </div>
    <div class="col-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= image_tag book.user.get_profile_image(80,80) %></td>
            <td>
              <%= link_to book_path(book.id) do %>
              <%= book.title %>
              <% end %>
            </td>
            <td><%= book.body %></td>
            <td id="favorite_btn_<%= book.id %>">
            <%= render "favorites/form", book:book %>
            </td>
            <td>コメント数<%= book.comments.count %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
