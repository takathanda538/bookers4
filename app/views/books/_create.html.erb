<h2>New Book</h2>
<%= form_with model: book do |f| %>
<div class="form-group">
<%= f.label :Title %><br>
<%= f.text_field :title %><br>
</div>
<div class="form-group">
<%= f.label :Opinion %><br>
<%= f.text_field :body %><br>
</div>
<div class="form-group">
<%= f.submit "Create Book",class: "btn btn-success" %>
</div>
<% end %>